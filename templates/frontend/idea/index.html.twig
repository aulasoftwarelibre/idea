{% from "widgets/paginator.html.twig" import pagination %}

{% extends "base.html.twig" %}

{% block body %}
    <div class="ui grid" id="ideas">
        {% for idea in ideas %}
            {% include('/frontend/idea/_idea.html.twig') %}
        {% else %}
            <div>No hay ideas :(</div>
        {% endfor %}

        <div class="centered aligned row">
        {% if  pattern | length >= 3  %}
            {{ pagination(page, numPages, 'idea_index_paginated', {q: pattern}) }}
        {% else %}
            {{ pagination(page, numPages, 'idea_index_paginated') }}
        {% endif %}
        </div>
    </div>
{% endblock %}
