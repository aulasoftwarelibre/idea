<!DOCTYPE html>
<html>
<head>
    <!-- Standard Meta -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

    {% block meta_tags %}
        {{- leogout_seo() }}
        <link rel="apple-touch-icon-precomposed" href="{{ asset('apple-touch-icon.png') }}?v=2">
        <link rel="icon" sizes="32x32" href="{{ asset('favicon.ico') }}?v=2">
        <link rel="icon" sizes="256x256" href="{{ asset('favicon.png') }}?v=2">
    {% endblock %}

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>


<body id="body">
<!-- Sidebar Menu -->
<div class="ui left vertical inverted menu sidebar">
    {{ knp_menu_render('sidebarMenu', {'bare': true, 'dropdown': false}) }}
</div>

<!-- Page Contents -->
<div class="pusher">
    <div class="ui large secondary pointing fixed menu">
        <div class="ui container">
            <a class="toc item"><i class="sidebar icon"></i></a>
            <a class="logo" href="{{ path('homepage') }}"></a>

            {{ knp_menu_render('mainMenu', {'bare': true, 'allow_safe_labels': true}) }}

            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                {{ render(controller('App\\Controller\\ProfileController::showMenu')) }}
            {% else %}
                <a class="floated right item" href="{{ path('connect_uco_start') }}"><i class="sign in icon"></i> Conectar</a>
            {% endif %}
        </div>
    </div>

    <div class="full height">
        <div class="ui main container">
            <div id="main" class="ui vertical stripe segment">

                <div class="ui right dividing rail">
                    <div class="ui vertical stripe">
                        {% block side_menu %}
                        {{ render(controller('App\\Controller\\IdeaController::getMoreVotesPendingIdeas')) }}
                        {% endblock %}
                    </div>
                </div>

                {% block flash_messages %}
                    {% if app.session is not null and app.session.started %}
                        {% for type, messages in app.flashes %}
                            {% for message in messages %}
                                <div class="ui {{ type }} floating message">
                                    {{- message -}}
                                </div>
                            {% endfor %}
                        {% endfor %}
                    {% endif %}
                {% endblock flash_messages %}

                {% block body %}{% endblock %}
            </div>
        </div>

    </div>

    <div class="ui inverted vertical footer segment">
        <div class="ui container">
            <p>
                Desarrollado por el <a href="https://www.uco.es/aulasoftwarelibre">Aula de Software Libre</a>.
                Hospedado por el <a href="https://consejo-eps.uco.es/">CEEPS</a>.
            </p>
        </div>
    </div>

    {% block modal %}{% endblock %}
</div>
</body>

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>

    <script>
        $('.dropdown')
            .dropdown({
                on: 'hover'
            })
        ;
    </script>
{% endblock %}

</html>
