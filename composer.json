{
    "name": "aulasoftwarelibre/idea",
    "description": "Gestor de actividades",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^7.2",
        "ext-curl": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "api-platform/api-pack": "^1.2",
        "botman/driver-telegram": "^1.5",
        "doctrine/doctrine-migrations-bundle": "^2.0",
        "exercise/htmlpurifier-bundle": "^2.0",
        "friendsofsymfony/ckeditor-bundle": "^1.0",
        "friendsofsymfony/comment-bundle": "^2.2",
        "friendsofsymfony/jsrouting-bundle": "^2.2",
        "harmony-project/ui-bundle": "^1.1",
        "informaticauco/oauth2-uco": "^0.4.0",
        "knpuniversity/oauth2-client-bundle": "^1.28",
        "leogout/seo-bundle": "^1.2",
        "liip/imagine-bundle": "^2.1",
        "ornicar/gravatar-bundle": "^1.3",
        "php-http/guzzle6-adapter": "^1.1",
        "php-http/httplug-bundle": "^1.9",
        "phpoffice/phpspreadsheet": "^1.4",
        "ramsey/uuid": "^3.8",
        "sensio/framework-extra-bundle": "^5.1",
        "sgomez/botman-bundle": "^0.2.0",
        "sonata-project/admin-bundle": "^3.38",
        "sonata-project/doctrine-orm-admin-bundle": "^3.6",
        "sonata-project/formatter-bundle": "^4.1",
        "sonata-project/intl-bundle": "^2.5",
        "sonata-project/user-bundle": "^4.2",
        "stof/doctrine-extensions-bundle": "^1.3",
        "symfony/asset": "*",
        "symfony/console": "*",
        "symfony/dotenv": "*",
        "symfony/expression-language": "*",
        "symfony/flex": "^1.1",
        "symfony/form": "*",
        "symfony/framework-bundle": "*",
        "symfony/mailer": "*",
        "symfony/messenger": "*",
        "symfony/monolog-bundle": "^3.1",
        "symfony/orm-pack": "*",
        "symfony/process": "*",
        "symfony/security-bundle": "*",
        "symfony/serializer-pack": "*",
        "symfony/translation": "*",
        "symfony/twig-bundle": "*",
        "symfony/validator": "*",
        "symfony/web-link": "*",
        "symfony/webpack-encore-bundle": "^1.5",
        "symfony/yaml": "*",
        "twig/cssinliner-extra": "^2.12",
        "twig/extra-bundle": "^2.12",
        "twig/inky-extra": "^2.12",
        "vich/uploader-bundle": "^1.8",
        "white-october/pagerfanta-bundle": "^1.2"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.10.3",
        "phpstan/phpstan-doctrine": "^0.10.0",
        "phpstan/phpstan-symfony": "^0.10.1",
        "symfony/debug-pack": "*",
        "symfony/maker-bundle": "^1.0",
        "symfony/profiler-pack": "*",
        "symfony/test-pack": "*",
        "symfony/web-server-bundle": "*",
        "symplify/easy-coding-standard": "^5.4"
    },
    "config": {
        "platform": {
            "php": "7.2.3"
        },
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "ckeditor:install --clear=drop": "symfony-cmd",
            "assets:install --symlink --relative %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "check-cs": "vendor/bin/ecs check src",
        "fix-cs": "vendor/bin/ecs check --fix src",
        "phpstan": "vendor/bin/phpstan analyse src --level max"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "require": "4.3.*",
            "allow-contrib": false
        }
    }
}
